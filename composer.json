{
	"name":              "igorsantos07/yii-br-pack",
	"description":       "Provide validations and easy masked fields for brazilian localization on Yii 1.1.*",
	"type":              "yii-extension",
	"license":           "BSD-3-Clause",
	"minimum-stability": "dev",
	"prefer-stable":     true,
	"keywords":          [
		"yii", "validator", "model", "brasil", "brazil", "br", "cpf", "cnpj", "phone", "landline", "cellphone",
       		"form", "field", "credit card"
	],

	"authors":           [
		{
			"name":     "Igor Santos",
			"email":    "igorsantos07+dev@gmail.com",
			"homepage": "http://www.igorsantos.com.br"
		}
	],

	"require":     {
		"yiisoft/yii": "1.1.*"
	},

	"require-dev": {
		"phpunit/phpunit": "3.7.*"
	},

	"conflict": {	"igorsantos07/yii-br-validator": "*" },
	"replace": {	"igorsantos07/yii-br-validator": "*" },

	"autoload": {
		"psr-4": {
			"BrPack\\": "src/"
		}
	}
}
